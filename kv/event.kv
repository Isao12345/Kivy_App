#:import dp kivy.metrics.dp

<EventScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1   # White background
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        # ---------- Header ----------
        Label:
            text: "All Tasks & Events"
            font_size: dp(28)
            bold: True
            size_hint_y: None
            height: dp(40)
            color: 0.9,0.2,0.4,1

        # ---------- Scroll Area ----------
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: event_container
                cols: 1
                spacing: dp(12)
                size_hint_y: None
                height: self.minimum_height

        # ---------- Navigation Buttons ----------
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            spacing: dp(10)

            Button:
                text: "← Back Home"
                font_size: dp(16)
                bold: True
                background_normal: ""
                background_color: 0.6,0.6,0.6,1
                color: 1,1,1,1
                on_press: app.root.current = "home"
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(8)]

            Button:
                text: "Calendar →"
                font_size: dp(16)
                bold: True
                background_normal: ""
                background_color: 0.9,0.3,0.4,1
                color: 1,1,1,1
                on_press: app.root.current = "calendar"
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(8)]