#:import dp kivy.metrics.dp

<EventScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: "All Tasks & Events"
            font_size: dp(28)
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            do_scroll_x: False
            BoxLayout:
                id: event_container
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)

        Button:
            text: "Back Home"
            size_hint_y: None
            height: dp(50)
            on_press: app.root.current = "home"