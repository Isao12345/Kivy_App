#:import dp kivy.metrics.dp

<EventScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1   # White background
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        # ---------- Header ----------
        Label:
            text: "üìã All Tasks & Events"
            font_size: dp(28)
            bold: True
            size_hint_y: None
            height: dp(50)
            color: 0.9,0.2,0.4,1   # Pinkish header

        # ---------- Scroll Area for Events ----------
        ScrollView:
            do_scroll_x: False
            size_hint_y: 0.75

            BoxLayout:
                id: event_container
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(5)
                spacing: dp(12)

        # ---------- Navigation Buttons ----------
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            spacing: dp(15)

            Button:
                text: "‚Üê Back Home"
                font_size: dp(16)
                bold: True
                background_normal: ""
                background_color: 0.6,0.6,0.6,1
                color: 1,1,1,1
                on_press: app.root.current = "home"
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(10)]

            Button:
                text: "Calendar ‚Üí"
                font_size: dp(16)
                bold: True
                background_normal: ""
                background_color: 0.9,0.3,0.4,1
                color: 1,1,1,1
                on_press: app.root.current = "calendar"
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(10)]