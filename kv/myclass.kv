#:import dp kivy.metrics.dp

<MyClassScreen>:
    canvas.before:
        Color:
            rgba: 0.94, 0.97, 1, 1  # ‡∏™‡∏µ‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏´‡∏•‡∏±‡∏Å
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"

        # ---------------- Header ----------------
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(110)
            padding: dp(20)
            spacing: dp(5)
            canvas.before:
                Color:
                    rgba: 0.15, 0.51, 0.92, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0, 0, dp(20), dp(20)]

            Label:
                text: "üéì"
                font_name: "assets/fonts/NotoEmoji-Regular.ttf"
                font_size: dp(30)
                bold: True
                color: 1, 1, 1, 1
            
            Label:
                text: ""
                font_size: dp(30)
                bold: True
                color: 1, 1, 1, 1
            
            Label:
                text: "My Class"
                font_size: dp(30)
                bold: True
                color: 1, 1, 1, 1

            Label:
                text: ""
                font_size: dp(30)
                bold: True
                color: 1, 1, 1, 1

            Label:
                text: "Upload and organize your class materials"
                font_size: dp(14)
                color: 0.9, 0.95, 1, 1

        # ---------------- Scroll Area ----------------
        ScrollView:
            do_scroll_x: False

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)

                # -------- Image Preview --------
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: root.height * 0.5
                    padding: dp(15)
                    spacing: dp(10)
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [dp(18)]

                    Label:
                        text: "Class Image Preview"
                        font_size: dp(16)
                        bold: True
                        size_hint_y: None
                        height: dp(25)
                        color: 0.15, 0.51, 0.92, 1

                    Image:
                        id: class_image
                        size_hint_y: 1
                        allow_stretch: True
                        keep_ratio: True
                        on_touch_down:
                            if self.collide_point(*args[1].pos): root.open_fullscreen()

                # -------- File Chooser --------
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(350)
                    padding: dp(15)
                    spacing: dp(10)
                    canvas.before:
                        Color:
                            rgba: 0.12, 0.12, 0.12, 1
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [dp(18)]

                    Label:
                        text: "Select Image File"
                        font_size: dp(16)
                        bold: True
                        color: 1, 1, 1, 1

                    FileChooserListView:
                        id: file_chooser
                        size_hint_y: 1
                        filters: ["*.png", "*.jpg", "*.jpeg"]
                        background_color: 0, 0, 0, 1
                        foreground_color: 1, 1, 1, 1
                        on_selection: root.select_image(self.selection)

        # ---------------- Bottom Buttons ----------------
        BoxLayout:
            size_hint_y: None
            height: dp(75)
            padding: dp(15)
            spacing: dp(12)

            Button:
                text: "‚Üê Back Home"
                background_normal: ""
                background_color: 0.6, 0.6, 0.6, 1
                color: 1,1,1,1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(14)]
                on_press: app.root.current = "home"

            Button:
                text: "Apply Image"
                background_normal: ""
                background_color: 0.15, 0.51, 0.92, 1
                color: 1,1,1,1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(14)]
                on_press: root.apply_image()

            Button:
                text: "Delete Image"
                background_normal: ""
                background_color: 0.88, 0.43, 0.45, 1
                color: 1,1,1,1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(14)]
                on_press: root.delete_image()

            Button:
                text: "Events ‚Üí"
                background_normal: ""
                background_color: 0.29, 0.78, 0.45, 1
                color: 1,1,1,1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(14)]
                on_press: app.root.current = "event"