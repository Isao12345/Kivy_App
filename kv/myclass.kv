#:import dp kivy.metrics.dp

<MyClassScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        Label:
            text: "My Class"
            font_size: dp(28)
            size_hint_y: None
            height: self.texture_size[1]

        Image:
            id: class_image
            size_hint_y: 0.5
            allow_stretch: True
            keep_ratio: True

        FileChooserIconView:
            size_hint_y: 0.4
            filters: ["*.png", "*.jpg", "*.jpeg"]
            on_selection: root.select_image(self.selection)

        Button:
            text: "Back Home"
            size_hint_y: None
            height: dp(50)
            on_press: app.root.current = "home"