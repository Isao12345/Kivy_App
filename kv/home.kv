<TaskRow>:
    size_hint_y: None
    height: dp(50)
    spacing: dp(10)

    Label:
        id: task_label
        font_size: dp(18)
        text_size: self.width, None
        valign: "middle"

    Button:
        id: done_btn
        text: "âœ”"
        size_hint_x: None
        width: dp(50)
        background_color: 0.2, 0.7, 0.3, 1
        color: 1, 1, 1, 1

    Button:
        id: delete_btn
        text: "âœ–"
        size_hint_x: None
        width: dp(50)
        background_color: 0.9, 0.3, 0.3, 1
        color: 1, 1, 1, 1


<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        Label:
            text: "ðŸ“š Student Life Manager"
            font_size: dp(28)
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            TextInput:
                id: new_task_input
                hint_text: "Enter new task..."
                multiline: False
                font_size: dp(18)

            Button:
                text: "Add"
                font_size: dp(18)
                size_hint_x: None
                width: dp(80)
                background_color: 0.3, 0.6, 0.9, 1
                color: 1, 1, 1, 1
                on_press: root.add_task(new_task_input.text)

            Button:
                text: "Go to Calendar"
                size_hint_y: None
                height: dp(50)
                background_color: 0.7, 0.5, 0.9, 1
                color: 1,1,1,1
                on_press: app.root.current = "calendar"

        ScrollView:
            do_scroll_x: False

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(20)

                # -------- Active Section --------
                Label:
                    text: "ðŸ”µ Active Tasks"
                    font_size: dp(22)
                    bold: True
                    size_hint_y: None
                    height: self.texture_size[1]

                BoxLayout:
                    id: active_container
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(10)

                # -------- Done Section --------
                Label:
                    text: "ðŸŸ¢ Completed Tasks"
                    font_size: dp(22)
                    bold: True
                    size_hint_y: None
                    height: self.texture_size[1]

                BoxLayout:
                    id: done_container
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(10)