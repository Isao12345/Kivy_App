<HomeScreen>:
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 1, 1  # ‡∏™‡∏µ‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏≠‡πà‡∏≠‡∏ô‡πÜ ‡∏ü‡πâ‡∏≤‡∏≠‡∏°‡∏°‡πà‡∏ß‡∏á
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(30)
        spacing: dp(20)

        Label:
            id: title_label
            text: "üìù Student Life Manager"
