#:import dp kivy.metrics.dp

<HomeScreen>:
    canvas.before:
        Color:
            rgba: 1,1,1,1   # White background
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        # ---------- Header ----------
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(120)
            padding: dp(10)
            spacing: dp(5)

            Label:
                text: "üè† Student Life"
                font_size: dp(34)
                bold: True
                color: 0.9,0.2,0.4,1  # pink/red header
                size_hint_y: None
                height: self.texture_size[1]

            Label:
                text: "Manage your classes, calendar & events"
                font_size: dp(16)
                color: 0.3,0.3,0.3,1
                size_hint_y: None
                height: self.texture_size[1]

        # ---------- Buttons Section ----------
        GridLayout:
            cols: 1
            spacing: dp(15)
            size_hint_y: 0.6
            height: self.minimum_height

            # My Class Button
            Button:
                text: "üéì My Class"
                font_size: dp(20)
                bold: True
                background_normal: ""
                background_color: 0.9,0.2,0.4,1
                color: 1,1,1,1
                size_hint_y: None
                height: dp(70)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(12)]
                on_press: app.root.current = "myclass"

            # Calendar Button
            Button:
                text: "üìÖ Calendar"
                font_size: dp(20)
                bold: True
                background_normal: ""
                background_color: 0.2,0.4,0.8,1
                color: 1,1,1,1
                size_hint_y: None
                height: dp(70)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(12)]
                on_press: app.root.current = "calendar"

            # Events Button
            Button:
                text: "üìã Events & Tasks"
                font_size: dp(20)
                bold: True
                background_normal: ""
                background_color: 0.3,0.7,0.3,1
                color: 1,1,1,1
                size_hint_y: None
                height: dp(70)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(12)]
                on_press: app.root.current = "event"

        # ---------- Spacer ----------
        Widget:
            size_hint_y: 0.2