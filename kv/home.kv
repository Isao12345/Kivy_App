<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        Label:
            id: tasks_label
            text: "Tasks: []"
            font_size: 70  # ขนาดข้อความใหญ่ขึ้น

        TextInput:
            id: new_task_input
            hint_text: "Enter new task"
            multiline: False
            font_size: 60  # ขนาดข้อความใน TextInput

        Button:
            text: "Add Task"
            font_size: 60  # ขนาดข้อความบนปุ่ม
            on_press:
                root.add_task(new_task_input.text)
                new_task_input.text = ""
        Button:
            text: "ruk lhor"
            font_size: 60  # ขนาดข้อความบนปุ่ม
            on_press:
                root.add_task(new_task_input.text)
                new_task_input.text = ""
            pos_hint: {"center_x": 0.5, "center_y": 1}