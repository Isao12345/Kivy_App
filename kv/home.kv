#:import dp kivy.metrics.dp

<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        Label:
            text: "üè† Home"
            font_size: dp(32)
            size_hint_y: None
            height: self.texture_size[1]

        Button:
            text: "Go to My Class"
            size_hint_y: None
            height: dp(50)
            on_press: app.root.current = "myclass"

        Button:
            text: "Go to Calendar"
            size_hint_y: None
            height: dp(50)
            on_press: app.root.current = "calendar"

        Button:
            text: "Go to Events"
            size_hint_y: None
            height: dp(50)
            on_press: app.root.current = "event"