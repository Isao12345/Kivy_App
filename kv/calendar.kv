#:import dp kivy.metrics.dp

<CalendarScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        # -------- Year Selection --------
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            Button:
                text: "<< Prev Year"
                on_press: root.prev_year()

            Label:
                id: year_label
                text: str(root.current_year)
                size_hint_x: None
                width: dp(100)
                halign: "center"
                valign: "middle"
                text_size: self.size

            Button:
                text: "Next Year >>"
                on_press: root.next_year()

        # -------- Month Selection --------
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            Button:
                text: "<< Prev Month"
                on_press: root.prev_month()

            Label:
                id: month_label
                text: f"{root.current_month}"
                size_hint_x: None
                width: dp(120)
                halign: "center"
                valign: "middle"
                text_size: self.size

            Button:
                text: "Next Month >>"
                on_press: root.next_month()

        # -------- Weekdays --------
        GridLayout:
            cols: 7
            size_hint_y: None
            height: dp(30)
            spacing: dp(5)

            Label:
                text: "Mon"
            Label:
                text: "Tue"
            Label:
                text: "Wed"
            Label:
                text: "Thu"
            Label:
                text: "Fri"
            Label:
                text: "Sat"
            Label:
                text: "Sun"

        # -------- Calendar Days --------
        GridLayout:
            id: days_container
            cols: 7
            spacing: dp(5)
            size_hint_y: None
            height: self.minimum_height

        # -------- Navigation Buttons --------
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            Button:
                text: "Back Home"
                on_press: app.root.current = "home"

            Button:
                text: "Go to Events"
                on_press: app.root.current = "event"